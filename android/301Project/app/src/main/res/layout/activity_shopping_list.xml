<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context=".ShoppingListActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_shopping_add_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add Item"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:background="@drawable/btn_bg"
            android:textColor="@color/text_gray_3"/>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/tv_shopping_category"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sort Byï¼š"
                android:textSize="14sp"
                android:textColor="@color/text_gray_3"/>

            <TextView
                android:id="@+id/tv_shopping_sort_by"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ingredient"
                android:textSize="14sp"
                android:paddingTop="3dp"
                android:paddingBottom="3dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:background="@drawable/btn_bg"
                android:textColor="@color/text_gray_3"/>


        </LinearLayout>

        <TextView
            android:id="@+id/tv_shopping_category"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textSize="14sp"
            android:paddingTop="3dp"
            android:paddingBottom="3dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/btn_bg"
            android:textColor="@color/text_gray_3"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/D9D9D9"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shopping List"
            android:textColor="@color/text_gray_3"
            android:layout_marginTop="10dp"
            android:textSize="30sp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Ingredient"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/text_gray_3"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Amount"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/text_gray_3"/>


            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Unit"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/text_gray_3"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Category"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/text_gray_3"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Purchased"
                android:textSize="14sp"
                android:gravity="center"
                android:textColor="@color/text_gray_3"/>

        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@color/black"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_shopping_list"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            >

        </androidx.recyclerview.widget.RecyclerView>

        <TextView
            android:id="@+id/tv_shopping_add_storage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add to Storage"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:textColor="@color/text_gray_3"
            android:background="@drawable/btn_blue_bg"
            android:textSize="16sp"/>

    </LinearLayout>


</LinearLayout>