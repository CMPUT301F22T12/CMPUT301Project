<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_weight="0"
    android:orientation="vertical"
    tools:context=".IngredientActivity">

    <Button
        android:id="@+id/add_ingredient_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Add Ingredient">
    </Button>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/IngredientNameText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Ingredient"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/IngredientLocationText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/IngredientNameText"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Location"
            android:textSize="15dp" />

        <TextView
            android:id="@+id/IngredientbbdText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-39dp"
            android:layout_toRightOf="@+id/IngredientLocationText"
            android:layout_weight="1"
            android:padding="10dp"
            android:text="Best Before"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/IngredientCategoryText"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="-39dp"
            android:layout_toRightOf="@+id/IngredientUnitText"
            android:padding="10dp"
            android:layout_weight="1"
            android:text="Category"
            android:textSize="15dp" />

    </LinearLayout>
    <ListView
        android:id="@+id/IngredientList"
        android:layout_width="match_parent"
        android:layout_height="598dp"
        android:layout_alignTop="@+id/IngredientNameText"
        android:layout_marginTop="8dp"
        android:choiceMode="singleChoice"
        android:listSelector="@android:color/darker_gray" />


</LinearLayout>